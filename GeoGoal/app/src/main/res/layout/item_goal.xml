<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/green_bar"
    android:layout_marginBottom="7dp"
    android:background="@drawable/rounded_background"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewGoalTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewGoalDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="@string/txt_goal_desc"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_eye"
        android:text="View"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalDescription"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/btn_eye"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_delete"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@id/btnUpdate"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalDescription"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/btn_delete"/>

    <Button
        android:id="@+id/btnConcluido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ConcluÃ­do"
        android:backgroundTint="@color/l_green"
        android:drawableRight="@drawable/ic_check"
        app:layout_constraintTop_toBottomOf="@id/btnDelete"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
